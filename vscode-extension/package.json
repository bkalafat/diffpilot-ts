{
  "name": "diffpilot",
  "displayName": "DiffPilot - MCP Server for Code Review",
  "description": "Local AI code review before you push. Auto branch detection, secret scanning, commit messages. Works with GitHub Copilot, Claude, Azure DevOps.",
  "version": "1.3.0",
  "publisher": "BurakKalafat",
  "author": {
    "name": "Burak Kalafat",
    "url": "https://github.com/bkalafat"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bkalafat/DiffPilot-TS"
  },
  "bugs": {
    "url": "https://github.com/bkalafat/DiffPilot-TS/issues"
  },
  "homepage": "https://github.com/bkalafat/DiffPilot-TS#readme",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "AI",
    "Machine Learning",
    "SCM Providers",
    "Linters",
    "Other"
  ],
  "keywords": [
    "mcp",
    "model context protocol",
    "mcp server",
    "mcp tools",
    "ai",
    "copilot",
    "claude",
    "pr",
    "pull request",
    "code review",
    "git",
    "azure devops",
    "tfs",
    "on-premise",
    "enterprise",
    "local",
    "diff",
    "commit",
    "changelog",
    "secrets",
    "security",
    "typescript",
    "node"
  ],
  "icon": "images/diffpilot.png",
  "galleryBanner": {
    "color": "#667eea",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "mcpServerDefinitionProviders": [
      {
        "id": "diffpilot",
        "label": "DiffPilot - MCP Server for Code Review"
      }
    ],
    "commands": [
      {
        "command": "diffpilot.getPrDiff",
        "title": "DiffPilot: Get PR Diff",
        "category": "DiffPilot"
      },
      {
        "command": "diffpilot.reviewPrChanges",
        "title": "DiffPilot: Review PR Changes",
        "category": "DiffPilot"
      },
      {
        "command": "diffpilot.generatePrTitle",
        "title": "DiffPilot: Generate PR Title",
        "category": "DiffPilot"
      },
      {
        "command": "diffpilot.generatePrDescription",
        "title": "DiffPilot: Generate PR Description",
        "category": "DiffPilot"
      },
      {
        "command": "diffpilot.generateCommitMessage",
        "title": "DiffPilot: Generate Commit Message",
        "category": "DiffPilot"
      },
      {
        "command": "diffpilot.scanSecrets",
        "title": "DiffPilot: Scan for Secrets",
        "category": "DiffPilot"
      },
      {
        "command": "diffpilot.getDiffStats",
        "title": "DiffPilot: Get Diff Statistics",
        "category": "DiffPilot"
      },
      {
        "command": "diffpilot.suggestTests",
        "title": "DiffPilot: Suggest Tests",
        "category": "DiffPilot"
      },
      {
        "command": "diffpilot.generateChangelog",
        "title": "DiffPilot: Generate Changelog",
        "category": "DiffPilot"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "diffpilot.generateCommitMessage",
          "group": "diffpilot@1",
          "when": "scmProvider == git"
        },
        {
          "command": "diffpilot.scanSecrets",
          "group": "diffpilot@2",
          "when": "scmProvider == git"
        }
      ],
      "commandPalette": [
        {
          "command": "diffpilot.getPrDiff",
          "when": "gitOpenRepositoryCount > 0"
        },
        {
          "command": "diffpilot.reviewPrChanges",
          "when": "gitOpenRepositoryCount > 0"
        },
        {
          "command": "diffpilot.generatePrTitle",
          "when": "gitOpenRepositoryCount > 0"
        },
        {
          "command": "diffpilot.generatePrDescription",
          "when": "gitOpenRepositoryCount > 0"
        },
        {
          "command": "diffpilot.generateCommitMessage",
          "when": "gitOpenRepositoryCount > 0"
        },
        {
          "command": "diffpilot.scanSecrets",
          "when": "gitOpenRepositoryCount > 0"
        },
        {
          "command": "diffpilot.getDiffStats",
          "when": "gitOpenRepositoryCount > 0"
        },
        {
          "command": "diffpilot.suggestTests",
          "when": "gitOpenRepositoryCount > 0"
        },
        {
          "command": "diffpilot.generateChangelog",
          "when": "gitOpenRepositoryCount > 0"
        }
      ]
    },
    "configuration": {
      "title": "DiffPilot",
      "properties": {
        "diffpilot.nodePath": {
          "type": "string",
          "default": "node",
          "description": "Path to Node.js executable"
        },
        "diffpilot.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to DiffPilot server (leave empty to use bundled server)"
        },
        "diffpilot.defaultBaseBranch": {
          "type": "string",
          "default": "main",
          "description": "Default base branch for PR comparisons"
        },
        "diffpilot.prTitleStyle": {
          "type": "string",
          "enum": [
            "conventional",
            "descriptive",
            "ticket"
          ],
          "default": "conventional",
          "description": "Style for generated PR titles"
        },
        "diffpilot.commitMessageStyle": {
          "type": "string",
          "enum": [
            "conventional",
            "simple"
          ],
          "default": "conventional",
          "description": "Style for generated commit messages"
        },
        "diffpilot.includeChecklist": {
          "type": "boolean",
          "default": true,
          "description": "Include checklist in PR descriptions"
        },
        "diffpilot.scanOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically scan for secrets when files are saved"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:server",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish",
    "build:server": "node build-server.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.2"
  }
}
